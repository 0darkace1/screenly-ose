!!! 5
%html

  %head
    %meta(charset="utf-8")
    %title Screenly OSE

    %link(href="/static/css/bootstrap.css", rel="stylesheet")
    %link(href="/static/css/screenly.css", rel="stylesheet")
    %link(href="/static/css/datepicker.css", rel="stylesheet")
    %link(href="/static/css/timepicker.css", rel="stylesheet")
    %link(href="/static/css/toggle-switch.css", rel="stylesheet")

    %script(src="/static/js/jquery-1.8.0.min.js")
    / %script(src="/static/js/bootstrap-dropdown.js")
    %script(src="/static/js/underscore-1.4.3.min.js")
    %script(src="/static/js/backbone-0.9.10.min.js")
    %script(src="/static/js/bootstrap-transition.js")
    %script(src="/static/js/bootstrap-tooltip.js")
    %script(src="/static/js/bootstrap-popover.js")
    %script(src="/static/js/bootstrap-modal.js")
    %script(src="/static/js/bootstrap-datepicker.js")
    %script(src="/static/js/bootstrap-timepicker.js")
    %script(src="/static/js/moment.js")
    %script(src="/static/js/screenly-ose.js")

    %script(type="text/template", id="asset-row-template")
      :plain
        <td><%= name %></td>
        <td><%= Screenly.date_to.string(start_date) %></td>
        <td><%= Screenly.date_to.string(end_date) %></td>
        <td>
          <a href="#" class="btn" id="edit-asset-button">Edit</a>
          <a href="#" class="btn" id="delete-asset-button">
            <i class="icon-trash"></i>
          </a>
        </td>
        <td>
          <label class="checkbox toggle well" style="width:115px" id="activation-toggle">
            <input id="view" type="checkbox" />
            <p>
              <span class="on">On</span>
              <span class="off">Off</span>
            </p>

            <a class="btn btn-primary slide-button"></a>
          </label>
        </td>

    %script(type="text/template", id="confirm-delete-template")
      %a#confirm-delete.btn.btn-large.btn-danger(href="#") DELETE ASSET

    %script(type="text/template", id="asset-modal-template")
      .modal.hide.fade(tabindex="-1", role="dialog", ariaLabelledby="myModalLabel", ariaHidden="true")
        %form.form-horizontal#add-form(method="POST", action="/api/assets", enctype="multipart/form-data")
          .modal-header
            %button.close(type="button", dataDismiss="modal", ariaHidden="true") x
            %h3#modalLabel Asset
          .modal-body
            %fieldset
              .control-group
                %label.control-label Name
                .controls
                  %input.span5(type="text", name="name", placeholder="Nickname for this asset")
              .control-group
                %label.control-label Asset Type
                .controls
                  %select.span5(name="mimetype")
                    %option(value="image") Image
                    %option(value="video") Video
                    %option(value="webpage") Webpage

            %fieldset
              .control-group(style="margin-bottom: 0")
                %label.control-label Asset URL
                .controls
                  %input.span5(type="text", name="uri", placeholder="Public URL to this asset's location")
                  .file_upload(style="line-height: 27px; font-weight: bold; color: #888")
                    &mdash; or &mdash;
              .control-group.file_upload
                %label.control-label Upload Asset
                .controls
                  %input(type="file", name="file_upload")
            %hr
            %fieldset
              .control-group
                %label.control-label Start Date
                .controls
                  %input.span2.date(type="text", name="start_date_date")
                  %input.span2.time(type="text", name="start_date_time")
                  %input(type="hidden", name="start_date")
              .control-group
                %label.control-label End Date
                .controls
                  %input.span2.date(type="text", name="end_date_date")
                  %input.span2.time(type="text", name="end_date_time")
                  %input(type="hidden", name="end_date")
              .control-group
                %label.control-label Duration
                .controls
                  %input.span1(type="text", name="duration")
                  seconds


          .modal-footer
            %a.btn(href="#", dataDismiss="modal") Close
            %input.btn.btn-primary#submit-button(type="button", value="Save")


  %body

    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand(href="/")
            %strong Screenly
            %span OSE

          %ul.nav.pull-right
            - if not up_to_date:
              %li.update-available
                %a(href="#")
                  %i.icon-circle-arrow-down.icon-white
                  Update Available
            %li
              %a(href="/settings")
                %i.icon-cog.icon-white
                Settings
            %li.divider-vertical
            %li
              %a(href="/system_info")
                %i.icon-tasks.icon-white
                System Info

    .container
      .row
        .span12
          %h1.page-header
            .pull-right
              %a#add-asset-button.btn.btn-primary(href="#")
                %i.icon-plus.icon-white
                Add Asset
            Schedule Overview

      #assets.row
        .span12
          %section
            .header
              Active assets
            %table.table.table-striped.active-table
              %thead
                %tr
                  %th Name
                  %th Start
                  %th End
                  %th
                  %th
              %tbody#active-assets
        .span12
          %section
            .header
              Inactive assets
            %table.table.table-striped.inactive-table
              %thead
                %tr
                  %th Name
                  %th Start
                  %th End
                  %th
                  %th
              %tbody#inactive-assets

      %hr
      %span Want to get more out of Screenly?
      %a.brand(href="http://www.screenlyapp.com/?utm_source=Screenly-OSE&utm_medium=root-page&utm_campaign=OSE")
        %strong Learn more.

    #footer
      .container
        .copy
          &copy; <strong>2012-2013.</strong> Wireload, Inc.
        %a(id="wireload-logo", href="http://wireload.net/")
          %img(src="/static/img/wireload-logo.png", alt="Wireload")





