!!! 5
%html
  
  %head
    %meta(charset="utf-8")
    %title Screenly OSE

    %link(href="/static/css/bootstrap.css", rel="stylesheet")
    %link(href="/static/css/screenly.css", rel="stylesheet")

    %script(src="/static/js/jquery-1.8.0.min.js")
    %script(src="/static/js/bootstrap-dropdown.js")

  %body
  
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand(href="/") 
            %strong Screenly
            %span OSE

          %ul.nav.pull-right
            %li.update-available
              %a(href="#")
                %i.icon-circle-arrow-down.icon-white
                Update Available
            %li.divider-vertical
            %li
              %a(href="/system_info") 
                %i.icon-tasks.icon-white
                System Info

    .container
      .row
        .span12
          %h1.page-header
            Schedule Overview

      .row
        .span12
          %section
            .header
              Active content
            %table.table.table-striped
              %thead
                %tr
                  %th Name
                  %th Start
                  %th End
                  %th
              %tbody
                - for asset in playlist:
                  %tr
                    %td ${asset['name']}
                    %td ${asset['start_date']}
                    %td ${asset['end_date']}
                    %td
                      %a(href="#") Deactivate

    #footer
      .container
        .copy
          &copy; <strong>2012-2013.</strong> Wireload, Inc.
        %a(id="wireload-logo", href="http://www.wireload.net/")
          %img(src="/static/img/wireload-logo.png", alt="Wireload")

    



