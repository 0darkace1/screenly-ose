!!! 5
%html
  
  %head
    %meta(charset="utf-8")
    %title Screenly OSE

    %link(href="/static/css/bootstrap.css", rel="stylesheet")
    %link(href="/static/css/screenly.css", rel="stylesheet")

    %script(src="/static/js/jquery-1.8.0.min.js")
    / %script(src="/static/js/bootstrap-dropdown.js")
    %script(src="/static/js/underscore-1.4.3.min.js")
    %script(src="/static/js/backbone-0.9.10.min.js")
    %script(src="/static/js/screenly-ose.js")

    %script(type="text/template", id="active-assets-template")
      .row
        .span12
          %section
            .header
              Active content
            %table.table.table-striped
              %thead
                %tr
                  %th Name
                  %th Start
                  %th End
                  %th
              %tbody

    %script(type="text/template", id="inactive-assets-template")
      .row
        .span12
          %section
            .header
              Inactive content
            %table.table.table-striped
              %thead
                %tr
                  %th Name
                  %th
              %tbody

    %script(type="text/template", id="active-asset-row-template")
      :plain
        <tr>
          <td><%= name %></td>
          <td></td>
          <td></td>
          <td>
            <a href="#" id="deactivate">Deactivate</a>
          </td>
        </tr>

    %script(type="text/template", id="inactive-asset-row-template")
      :plain
        <tr>
          <td><%= name %></td>
          <td>
            <a href="#" id="activate">Activate</a>
          </td>
        </tr>
                

  %body
  
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand(href="/") 
            %strong Screenly
            %span OSE

          %ul.nav.pull-right
            %li.update-available
              %a(href="#")
                %i.icon-circle-arrow-down.icon-white
                Update Available
            %li.divider-vertical
            %li
              %a(href="/system_info") 
                %i.icon-tasks.icon-white
                System Info

    .container
      .row
        .span12
          %h1.page-header
            Schedule Overview

      #active-assets-container
      #inactive-assets-container

    #footer
      .container
        .copy
          &copy; <strong>2012-2013.</strong> Wireload, Inc.
        %a(id="wireload-logo", href="http://www.wireload.net/")
          %img(src="/static/img/wireload-logo.png", alt="Wireload")

    



